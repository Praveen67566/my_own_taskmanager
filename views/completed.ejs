<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Completed Tasks</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

  <!-- Top Nav Bar -->
  <div class="bg-white shadow p-4 flex justify-between items-center">
    <div class="flex gap-6">
      <span class="font-semibold text-gray-700"><a href="/">Dashboard</a></span>
      <span class="font-semibold text-gray-700"><a href="/today">Today</a></span>
      <span class="font-semibold text-gray-700"><a href="/completed">Completed</a></span>
    </div>
    <div class="flex items-center gap-4">
      <input type="text" class="border px-2 py-1 rounded" placeholder="Search" />
      <div class="w-8 h-8 rounded-full bg-gray-300"></div>
      <span class="font-medium">Praveen</span>
    </div>
  </div>

  <!-- Header -->
  <div class="flex items-center justify-center bg-gray-100">
    <div class="p-6 text-center">
      <h1 class="text-3xl font-bold text-green-600 mb-2">Completed Tasks</h1>
      <p class="text-gray-700 text-lg">These are the tasks you've completed and your marks.</p>
    </div>
  </div>

  <!-- Completed Tasks Table -->
  <div class="max-w-5xl mx-auto mt-6 border rounded-md overflow-hidden shadow-sm bg-white">
    <div class="bg-gray-100 px-4 py-2 flex items-center text-sm text-gray-700 font-semibold">
      <span class="w-6 ml-4">#</span>
      <span class="ml-4 flex-1">Task</span>
      <span class="w-40 text-center">Module</span>
      <span class="w-40 text-center">Category</span>
      <span class="w-32 text-center">Marks</span>
      <span class="w-32 text-right">Completed On</span>
    </div>

    <% completedTasks.forEach((task, index) => { %>
      <div class="flex items-center px-4 py-3 border-t hover:bg-gray-50">
        <span class="w-6 ml-4 text-sm"><%= index + 1 %></span>
        <div class="ml-4 flex-1">
          <p class="text-sm font-semibold text-gray-900"><%= task.title %></p>
        </div>
        <div class="w-40 text-center text-xs text-gray-600"><%= task.module %></div>
        <div class="w-40 text-center text-xs text-gray-600"><%= task.category %></div>
        <div class="w-32 text-center font-semibold text-green-600"><%= task.marks || 'N/A' %></div>
        <div class="w-32 text-right text-xs text-gray-500"><%= task.completedAt || task.lastupdated %></div>
      </div>
    <% }) %>

    <% if (completedTasks.length === 0) { %>
      <div class="text-center py-6 text-gray-500 text-sm">No completed tasks yet.</div>
    <% } %>
  </div>

</body>

</html>
