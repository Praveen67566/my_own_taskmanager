<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Developer Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Top Nav Bar -->
    <div class="bg-white shadow p-4 flex justify-between items-center">
      <div class="flex gap-6">
        <span class="font-semibold text-gray-700">Dashboard</span>
        <span class="font-semibold text-gray-700">Projects</span>
        <span class="font-semibold text-gray-700">Issues</span>
        <span class="font-semibold text-gray-700">Commits</span>
        <span class="font-semibold text-gray-700">Docs</span>
      </div>
      <div class="flex items-center gap-4">
        <input type="text" class="border px-2 py-1 rounded" placeholder="Search" />
        <div class="w-8 h-8 rounded-full bg-gray-300"></div>
        <span class="font-medium">Praveen</span>
        <button class="text-xl" id="cross-btn">✕</button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="p-6">
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Development Tasks</h1>
        <div class="flex gap-2">
          <form method="POST" action="/create-task">
            <input type="hidden" name="due" value="<%= new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>" />
            <input type="text" name="title" placeholder="Task title (e.g., Fix bug, Code review)" class="border px-2 py-1 rounded text-sm" required />
            <input type="text" name="assoc" placeholder="Project or Repo name" class="border px-2 py-1 rounded text-sm" required />
            <button type="submit" class="bg-gray-200 text-sm px-4 py-2 rounded" id="addtask">Add Task</button>
          </form>
        </div>
      </div>

      <!-- Filters and Actions -->
      <div class="flex gap-4 mb-4 text-sm text-gray-600">
        <span class="cursor-pointer font-medium">All</span>
        <span class="cursor-pointer">Today</span>
        <span class="cursor-pointer">Pending</span>
        <span class="cursor-pointer">Completed</span>
        <span class="cursor-pointer">More</span>
        <span class="text-blue-500 cursor-pointer">+ Add view</span>
      </div>

      <!-- Search and Filters -->
      <div class="flex items-center gap-4 mb-4">
        <input type="text" class="border px-3 py-2 w-1/3 rounded text-sm" placeholder="Search tasks" />
        <span class="text-sm font-medium">Praveen (me)</span>
        <span class="text-sm text-blue-500 cursor-pointer">More filters</span>
        <span class="text-sm text-gray-500 cursor-pointer">Edit columns</span>
      </div>

      <!-- Table Header -->
      <div class="grid grid-cols-5 text-sm font-semibold text-gray-500 bg-gray-200 py-2 px-4 rounded-t">
        <div>Status</div>
        <div>Title</div>
        <div>Project</div>
        <div>Last Updated</div>
        <div>Due Date</div>
      </div>

      <!-- Table Rows -->
      <div class="bg-white divide-y divide-gray-200">
        
      </div>
    </div>

    <!-- Sidebar -->
    <div class="fixed right-0 top-16 w-80 bg-white shadow-lg p-4" id="Sidebar">
      <h2 class="text-lg font-semibold mb-2">Dev Insights</h2>
      <p class="text-sm text-gray-600 mb-4">5 pull requests merged <span class="text-green-600">▲2</span></p>
      <p class="text-sm text-gray-600 mb-4">12 commits pushed <span class="text-green-600">▲5</span></p>
      <h3 class="text-sm font-semibold mb-2">Weekly Progress</h3>
      <div class="grid grid-cols-3 text-center">
        <div>
          <p class="text-lg font-bold">8</p>
          <p class="text-sm text-green-600">▲3</p>
          <p class="text-xs">TASKS</p>
        </div>
        <div>
          <p class="text-lg font-bold">12</p>
          <p class="text-sm text-green-600">▲5</p>
          <p class="text-xs">COMMITS</p>
        </div>
        <div>
          <p class="text-lg font-bold">5</p>
          <p class="text-sm text-green-600">▲2</p>
          <p class="text-xs">PRs</p>
        </div>
      </div>
    </div>

    <script>
        const btn = document.getElementById('cross-btn');
        btn.addEventListener('click',()=>{
            const sidebar = document.getElementById('Sidebar');
            console.log(sidebar)
            sidebar.style.display = 'none';
        })
    </script>
  </body>
</html>
